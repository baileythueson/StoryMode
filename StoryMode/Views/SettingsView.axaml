<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:global="clr-namespace:"
             xmlns:services="clr-namespace:StoryMode.Services"
             xmlns:vm="clr-namespace:StoryMode.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SettingsViewModel"
             x:Class="StoryMode.Views.SettingsView">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding [Settings.SettingsHeader], Source={x:Static services:LanguageManager.Instance}}" Classes="Header"/>
        <ComboBox PlaceholderText="{Binding [Settings.LanguagePlaceholder], Source={x:Static services:LanguageManager.Instance}}"
                  ItemsSource="{Binding Languages}"
                  SelectedItem="{Binding SelectedLanguage}"
                  DisplayMemberBinding="DisplayName"
                  HorizontalAlignment="Stretch"
                  />
    </StackPanel>
</UserControl>
